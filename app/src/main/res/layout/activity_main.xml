<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juancho.prueba2.MainActivity">

    <RelativeLayout
        android:layout_width="346dp"
        android:layout_height="498dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/buttonPrueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="168dp"
            android:layout_below="@+id/editTextP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/editTextP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/PtextViewP"
            android:layout_below="@+id/PtextViewP"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="45dp"
            android:layout_marginVertical="80dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Mensaje"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/PtextViewP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Procesar"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="91dp" />

        <Button
            android:id="@+id/buttonV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:text="Another Button "
            android:layout_below="@+id/buttonPrueba"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
